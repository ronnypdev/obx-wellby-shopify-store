<div class="product-card">

    <div class="card-info">
        <a href="{{ product.url }}">
            {{ product.title }}
            <span>{{ product.price | money_without_trailing_zeros }}</span>
        </a>

        <p>{{ product.description | strip_html| split: '.' | first | append: '.' }}</p>

        {% if product.variants.size > 1 %}
            {{ 'product.card.options' | t: optionCount: product.variants.size }}
            &mdash;
        {% endif %}

        {% if product.available %}
            <a href="{{ product.url }}">{{ 'product.card.more_info'| t }}</a>
        {% else %}
            {{ 'product.form.soldout' | t }}
        {% endif %}
    </div>
    <!-- end card info -->

    <div class="card-image">
        <a href="{{ product.url }}">
            <img src="{{ product.featured_image.src | img_url: '1200X900', crop: 'center' }}" alt="{{ product.featured_image.alt | escape }}">
        </a>
    </div><!-- card-image -->

</div>
<!-- end product card -->